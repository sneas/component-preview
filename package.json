{
  "name": "@sneas/x-ray",
  "version": "0.0.0-development",
  "description": "A small web component for demoing other web/HTML components. Displays component and renders it's HTML.",
  "author": "Dmytro Snisarenko",
  "homepage": "https://sneas.github.io/x-ray",
  "repository": {
    "type": "git",
    "url": "https://github.com/sneas/x-ray.git"
  },
  "main": "dist/index.cjs.js",
  "module": "dist/custom-elements/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/custom-elements/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/component/component.esm.js",
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build": "stencil build --docs",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate"
  },
  "dependencies": {
    "@stencil/core": "^2.0.1",
    "highlight.js": "^10.3.1",
    "prettier": "^2.1.2"
  },
  "license": "MIT",
  "devDependencies": {
    "@stencil/sass": "^1.3.2",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,html,css,scss,json}": "prettier --write"
  }
}
